# 1) Make sure .gitignore excludes junk
cat > .gitignore <<'EOF'
# OS
.DS_Store

# Python
__pycache__/
*.py[cod]
*.egg-info/

# FastAPI uploads / logs
backend/uploaded_logs/
*.bin
*.log

# Node / Vite
frontend/node_modules/
frontend/.vite/
dist/
*.local

# Env & secrets
.env
.env.*
EOF
git add .gitignore
